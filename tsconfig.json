{
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"compilerOptions": {
		"outDir": "./dist",
		"allowJs": true,
		"allowSyntheticDefaultImports": false,
		"target": "es6",
		"downlevelIteration": true,
		"importHelpers": true,
		"sourceMap": true,
		"module": "esnext",
		"moduleResolution": "node",
		"checkJs": false,
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017",
			"esnext"
		],
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"suppressImplicitAnyIndexErrors": true,
	},
	"exclude": [
		"node_modules"
	]
}